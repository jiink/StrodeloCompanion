<Window x:Class="StrodeloCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrodeloCompanion"
        mc:Ignorable="d"
        Title="Strodelo Companion" Height="450" Width="800">
    <Grid Background="#3C2970"> 
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="IpAddressBox" Grid.Row="0" Grid.Column="0" Text="127.0.0.1" FontSize="30" Margin="40" VerticalContentAlignment="Center" Height="55" Padding="5"/>
        <Button x:Name="PairButton" Click="PairButton_Click" Grid.Row="0" Grid.Column="1" Content="Pair" Margin="80" FontSize="30"/>
        <Button x:Name="SendFileButton"
                Click="SendFileButton_Click" 
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Content="Send file"
                FontSize="30"
                Margin="40"/>
    </Grid>
</Window>
